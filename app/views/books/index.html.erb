<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Motto</th>
      <th>Image url</th>
      <th>Isbn</th>
      <th>Year</th>
      <th>Pages</th>
      <th>Language</th>
      <th>Size</th>
      <th>Format</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.motto %></td>
        <td><%= book.image_url %></td>
        <td><%= book.ISBN %></td>
        <td><%= book.year %></td>
        <td><%= book.pages %></td>
        <td><%= book.language %></td>
        <td><%= book.size %></td>
        <td><%= book.format %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

